<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora Simples</title>
</head>
<body>
    <script>
        function operacao(op) {
            //alert ('eu vou somar')

            console.log(op);
            if (op === "+") {
                res.value = parseInt (v1.value) + parseInt (v2.value)
            }
            else if (op === "-") {
                res.value = parseInt (v1.value) - parseInt (v2.value)
            }
            else if (op === "*") {
                res.value = parseInt (v1.value) * parseInt (v2.value)
            }
            else if (op === "/") {
                res.value = parseInt (v1.value) / parseInt (v2.value)
            }
        }
    </script>

    <h1>Calculadora Simples</h1>
    Valor1: <input type="text" id="v1" value="0" ><br>
    Valor2: <input type="text" id="v2" value="0" ><br>
    <input type="radio" onclick="operacao('+')"> Somar
    <input type="radio" onclick="operacao('-')"> Subtrair
    <input type="radio" onclick="operacao('*')"> Multiplicar
    <input type="radio" onclick="operacao('/')"> Dividir <br>
    Resultado: <input type="text" id="res" value="0" readonly><br>
</body>
</html>
